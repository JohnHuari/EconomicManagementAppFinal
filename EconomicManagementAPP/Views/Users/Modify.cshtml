@model Users

@{
    ViewData["Title"] = "Modificar Usuario";
}

<h1>Modificar usuario @Model.Email</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Modify">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="StandarEmail" class="form-label"></label>
        <input type="text" asp-for="StandarEmail" class="form-control" />
        <span asp-validation-for="StandarEmail" class="text-danger"></span>
    </div>

        <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input type="text" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Modificar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
