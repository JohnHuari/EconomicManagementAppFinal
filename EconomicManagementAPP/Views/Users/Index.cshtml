@model IEnumerable<Users>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>
<h5>Crea y administra los usuarios que tomarán uso en la aplicación.</h5>
<p></p>
<a asp-action="Create" class="btn btn-primary mb-3">Crear Usuario</a>

@if(Model.Any()){
<table class="table">
  <thead>
    <tr>
      <th>Acción</th>
      <th>Email</th>
      <th>Standard Email</th>
    </tr>
  </thead>
  <tbody id="reordenable">
    @foreach (var users in Model)
    {
            <tr>
                <td>
                    <input type="hidden" value="@users.Id" class="ids" />
                    <a class="btn btn-primary" asp-action="Modify" asp-route-id="@users.Id">Modificar</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@users.Id">Eliminar</a>
                </td>
                <td>
                    @users.Email
                </td>
                <td>
                  @users.StandarEmail
                </td>
            </tr>
    }
  </tbody>
</table>
}@if(!Model.Any()){
    <h1>
        No hay resultados.
    </h1>
}
